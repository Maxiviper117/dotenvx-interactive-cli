{
    "name": "dotenvx-interactive-cli",
    "version": "0.1.0",
    "description": "An interactive CLI tool for managing .env files with dotenvx - encrypt, decrypt, and manage environment variables with ease.",
    "author": "Maxiviper117",
    "license": "MIT",
    "keywords": [
        "cli",
        "typescript",
        "bun",
        "dotenvx",
        "env",
        "environment",
        "encryption",
        "interactive",
        "precommit"
    ],
    "scripts": {
